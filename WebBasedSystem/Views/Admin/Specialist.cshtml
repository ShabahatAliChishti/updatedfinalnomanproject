<div class="row">
    <div class="col-lg-6">
        <!-- Form Basic -->
        <div class="card mb-4" style="width:185%;margin-left: 65px;">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="background-color:darkblue;">
                <h6 class="m-0 font-weight-bold" style="color:white;">Specilaist Form</h6>
            </div>
            <div class="card-body">
                <form id="myForm">
                    <div class="row">
                        <input type="hidden" id="WayPointId" name="Id" />


                        <div class="col-md-6">
                            @if (ViewBag.CountryList != null)
                            {
                                @Html.DropDownListFor(model => model.specialistmodel.SpecialistTypeId, ViewBag.CountryList as SelectList, "--Select SpecialistType--", new { @id= "SpecialistTypeId",@class = "form-control" })
                            }

                        </div>
                        <div class="col-md-6">
                            @Html.DropDownListFor(model => model.specialistmodel.SubMenuId, new SelectList(" "), "--Select SubMenu--", new { @id= "SubMenuId", @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @if (ViewBag.Title != null)
                            {
                                @Html.DropDownListFor(model => model.specialistmodel.TitleId, ViewBag.Title as SelectList, "--Select Title--", new { @id= "TitleId", @class = "form-control" })
                            }
                        </div>

                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.specialistmodel.SpecialistName, new { @id = "SpecialistName", @class = "form-control", @placeholder = "Specialist Name" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.specialistmodel.Surname, new { @id = "Surname", @class = "form-control", @placeholder = "Surname" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.specialistmodel.BusinessName, new { @id = "BusinessName", @class = "form-control", @placeholder = "Business Name" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.specialistmodel.Age, new { @id = "Age", @class = "form-control", @placeholder = "Age" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.specialistmodel.PhoneNo, new { @id = "PhoneNo", @class = "form-control", @placeholder = "Phone No" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.specialistmodel.MobileNo, new { @id = "MobileNo", @class = "form-control", @placeholder = "Mobile No" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.specialistmodel.OfficeNo, new { @id = "OfficeNo", @class = "form-control", @placeholder = "Office No" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.specialistmodel.Address1, new { @id = "Address1", @class = "form-control", rows = "5", @placeholder = "Address 1" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.specialistmodel.Address2, new { @id = "Address2", @class = "form-control", rows = "5", @placeholder = "Address 2" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.specialistmodel.EmailAddress, new { @id = "EmailAddress", @class = "form-control", @placeholder = "Email Address" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.specialistmodel.Suburbs, new { @id = "Suburbs", @class = "form-control", @placeholder = "Suburbs" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.specialistmodel.State, new { @id = "State", @class = "form-control", @placeholder = "State" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.specialistmodel.PostCode, new { @id = "PostCode", @class = "form-control", @placeholder = "PostCode" })
                        </div>
                        <div class="col-md-6">
                            @if (ViewBag.WaitingTime != null)
                            {
                                @Html.DropDownListFor(model => model.notesmodel.Waiting_Time_Id, ViewBag.WaitingTime as SelectList, "--Select Waiting Time--", new { @class = "form-control" })
                            }
                        </div>
                        <div class="col-md-6">
                            <label>
                                Booking
                            </label>
                            <label>

                                @Html.RadioButtonFor(x => x.notesmodel.IsBooking, true)
                                Yes
                            </label>
                            <label>
                                @Html.RadioButtonFor(x => x.notesmodel.IsBooking, false)
                                No
                            </label>
                        </div>
                        <div class="col-md-6">
                            @Html.TextAreaFor(model => model.notesmodel.NotesDescription, new { @id = "NotesDescription", @class = "form-control", rows = "5", @placeholder = "Notes Description" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.notesmodel.price, new { @id = "price", @class = "form-control", @placeholder = "Price" })
                        </div>
                        <div class="col-md-6">
                            <label>Taking New Patients</label>
                            @*@Html.RadioButtonFor(model => model.TakingNewPatients, new { @id = "MobileNo", @class = "form-control", @placeholder = "Mobile No" })*@
                            <label>
                                @Html.RadioButtonFor(x => x.notesmodel.TakingNewPatients, true)
                                Yes
                            </label>
                            <label>

                                @Html.RadioButtonFor(x => x.notesmodel.TakingNewPatients, false)
                                No
                            </label>


                        </div>







                        <button id="btnSubmit" type="submit" class="btn btn-outline-success mb-1" style="margin-left: 15px;width: 110px;">Submit</button>
                    </div>
                </form>
                <div style="text-align:center;display:none" id="loaderDiv">
                    <img src="~/Content/InternetSlowdown_Day.gif" width="150" />
                </div>

            </div>
        </div>
    </div>
</div>



<script>

    $(document).ready(function () {

        $("#SpecialistTypeId").change(function () {
            $.get("/Admin/GetMenuList", { SpecialistTypeId: $("#SpecialistTypeId").val() }, function (data) {
                $("#SubMenuId").empty();
                $.each(data, function (index, row) {
                    $("#SubMenuId").append("<option value='" + row.SubMenuId + "'>" + row.SubMenuName + "</option>")
                });
            });
        });



        $("#btnSubmit").click(function () {
            //sari fields krdena yhn
            if ($("#TitleId").val() == "" && $("#SpecialistName").val() == "") {
                alert("Fields should not be empty");
                return false;
            }


            else {
                $("#loaderDiv").show();

                var myformdata = $("#myForm").serialize();

                $.ajax({

                    type: "POST",
                    url: "/Admin/Specialist",
                    data: myformdata,
                    success: function () {
                        swal("The specialist record is saved sucessfully ", "success");
                        //console.log("aaagay");
                        $("#loaderDiv").hide();
                        window.location.href = "/Admin/AllSpecialist";
                        //$("#MyModal").modal("hide");

                    }

                })
            }

        })

        $(function () {
            $("#PostCode").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '/Admin/AutoCompletePostCode/',
                        data: "{ 'prefix': '" + request.term + "'}",
                        dataType: "json",
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(response.responseText);
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        }
                    });
                },
                select: function (e, i) {
                    $("#WayPointId").val(i.item.val);
                },
                minLength: 1
            });
        });
        $(function () {
            $("#Suburbs").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '/Admin/AutoCompleteSuburbs/',
                        data: "{ 'prefix': '" + request.term + "'}",
                        dataType: "json",
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(response.responseText);
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        }
                    });
                },
                select: function (e, i) {
                    $("#WayPointId").val(i.item.val);
                },
                minLength: 1
            });
        });
        $(function () {
            $("#State").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '/Admin/AutoCompleteState/',
                        data: "{ 'prefix': '" + request.term + "'}",
                        dataType: "json",
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(response.responseText);
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        }
                    });
                },
                select: function (e, i) {
                    $("#WayPointId").val(i.item.val);
                },
                minLength: 1
            });
        });



        function getEmployeeById(id) {
            debugger;
            var url = "/Admin/Get?SpecialistId=" + id;

            $("#MyModalEdit").modal();

            $.ajax({
                url: url,
                type: 'GET',
                success: function (data) {
                    var obj = JSON.parse(data);

                    $("#SpecialistTypeId").val(obj.SpecialistTypeId);
                    $("#NameEdit").val(obj.Name);


                },
                error: function (err) {
                    alert("Error: " + err.responseText);
                }
            });
        }

    })

</script>

